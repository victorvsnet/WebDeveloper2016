@model Web.UI.Models.UsuarioViewModels

@{
    ViewBag.Title = "Index";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">

                @using (Html.BeginForm(new { @class = "box box-info" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="box-body">
                        <h4>Mis Datos</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Nombre de Usuario / Username -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                @Html.EditorFor(model => model.nom_usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre de Usuario" } })
                            </div><!-- /.input group -->
                            @Html.ValidationMessageFor(model => model.nom_usuario, "", new { @class = "control-label text-danger" })
                        </div><!-- /.form group -->

                        <!-- Correo electronico -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-at"></i>
                                </div>
                                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", placeholder = "Correo electronico" } })
                                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->

                        <!-- Nombre -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil-square-o"></i>
                                </div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombres" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->

                        <!-- Apellido Paterno -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil-square-o"></i>
                                </div>
                                @Html.EditorFor(model => model.ape_paterno, new { htmlAttributes = new { @class = "form-control", placeholder = "Apellido Paterno" } })
                                @Html.ValidationMessageFor(model => model.ape_paterno, "", new { @class = "text-danger" })
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->

                        <!-- Apellido Materno -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-pencil-square-o"></i>
                                </div>
                                @Html.EditorFor(model => model.ape_materno, new { htmlAttributes = new { @class = "form-control", placeholder = "Apellido Materno" } })
                                @Html.ValidationMessageFor(model => model.ape_materno, "", new { @class = "text-danger" })
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->

                        <!-- Fecha de Nacimiento -->
                        <div class="form-group">
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(model => model.FecNacimiento, new { id = "FechaNacimientoDate", @class = "form-control datepicker", data_inputmask = "'alias': 'DD/MM/YYYY'", placeholder = "Fecha de Nacimiento" })
                                @Html.ValidationMessageFor(model => model.FecNacimiento, "", new { @class = "text-danger" })
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->

                        <!-- Numero de Anexo -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone-square"></i>
                                </div>
                                @Html.EditorFor(model => model.anexo, new { htmlAttributes = new { @class = "form-control", placeholder = "Anexo" } })
                                @Html.ValidationMessageFor(model => model.anexo, "", new { @class = "text-danger" })
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->

                        <!-- Cargo del Usuario -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-sitemap"></i>
                                </div>
                                @Html.DropDownListFor(model => model.idcargo, new SelectList(Model.ListaCargos, "Id", "gls_Cargo"), "Cargo del Usuario", new { @class = "form-control select2" })
                            </div><!-- /.input group -->
                        </div><!-- /.form-group -->

                        <!-- Area de Usuario -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-sitemap"></i>
                                </div>
                                @Html.DropDownListFor(model => model.idarea, new SelectList(Model.ListaAreas, "Id", "gls_area"), "Area del Usuario", new { @class = "form-control select2" })
                            </div><!-- /.input group -->
                        </div><!-- /.form-group -->

                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>

                }

            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">
            $(function () {
                $('#FechaNacimientoDate').datetimepicker({
                    format: 'DD/MM/YYYY'
                });
            });
</script>