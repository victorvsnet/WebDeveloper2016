@using Web.UI.Models
@model Web.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Birthday | Registro";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Birthday | Registro</title>
    <!-- Validacion del ASP MVC -->
    @Scripts.Render("~/bundles/jqueryval")

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Estilos/dist/css/AdminLTE.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><span class="fa fa-birthday-cake margin-r-5"></span><b>Birthday</b>IS</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Registro de Usuarios</p>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <!-- Nombre de Usuario -->
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", placeholder = "Usuario" })
                    <span class="glyphicon fa fa-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.NombreUsuario, "", new { @class = "text-danger" })
                </div>
                <!-- Nombre -->
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre" })
                    <span class="glyphicon fa fa-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>
                <!-- Apellido Paterno -->
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Apellido Paterno" })
                    <span class="glyphicon fa fa-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
                </div>
                <!-- Cargo -->
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Cargo, new { @class = "form-control", placeholder = "Cargo" })
                    <span class="glyphicon fa fa-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Cargo, "", new { @class = "text-danger" })
                </div>
                <!-- Email del Usuario -->
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <!-- Contrasenia -->
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <!-- Check de confirmacion -->
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "confirmar password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" value="Registrar" />
                    </div>
                </div>
            }
            Ya tengo una cuenta @Html.ActionLink("Iniciar Sessión", "Login", new { @class = "btn btn-primary" })
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Content/Estilos/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>